<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/textview_icon"
        android:layout_width="40dip"
        android:layout_height="30dip"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dip"
        android:singleLine="true"
        android:gravity="center"
        android:text="TXT"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#757575"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/button_popmenu"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_popmenu"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/textview_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_popmenu"
        android:layout_marginRight="10dp"
        android:text="extra"
        android:textSize="10sp"/>


    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textview_icon"
        android:layout_toLeftOf="@+id/textview_extra"
        android:singleLine="true"
        android:layout_marginTop="10dip"
        android:text="Name"
        android:textSize="15sp"

        />
    <TextView
        android:id="@+id/textview_build_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textview_name"
        android:layout_below="@+id/textview_name"
        android:text="build time"
        android:textSize="10sp"/>


</RelativeLayout>